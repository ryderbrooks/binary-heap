{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true,
    "diagnostics": true,
    "extendedDiagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declarationMap": true,
    "rootDir": "./src",
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "esnext"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "ignoreCompilerErrors": false,
    "module": "ESNext",
    "target": "ES6",
    "verbose": true,
    "excludeNotExported": false,
    "excludeExternals": false,
    "includeDeclarations": true,
    "excludePrivate": true,
    "exclude": [
      "**/node_modules/!(@types)/!(node)/**"
    ],
    "name": "",
    "theme": "default"
  }
}